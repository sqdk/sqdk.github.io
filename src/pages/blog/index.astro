---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | Christian Probst">
	<main class="max-w-3xl mx-auto px-4 py-24">
		<header class="mb-16">
			<a href="/" class="text-accent hover:underline mb-8 inline-block">‚Üê Back Home</a>
			<h1 class="text-4xl font-bold">Blog</h1>
		</header>

		<ul class="space-y-12">
			{
				posts.map((post) => (
					<li>
						<a href={`/blog/${post.slug}/`} class="group">
							<time datetime={post.data.pubDate.toISOString()} class="text-gray-500 text-sm">
								{post.data.pubDate.toLocaleDateString('en-us', {
									year: 'numeric',
									month: 'short',
									day: 'numeric',
								})}
							</time>
							<h2 class="text-2xl font-bold group-hover:text-accent transition-colors mt-2">
								{post.data.title}
							</h2>
							<p class="text-gray-400 mt-2 line-clamp-2">
								{post.data.description}
							</p>
						</a>
					</li>
				))
			}
		</ul>
	</main>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import headshot from '../assets/headshot.png';

// Logo Imports
import complexioLogo from '../assets/complexio_logo.png';
import dixaLogo from '../assets/dixa_logo.png';
import nordicLogo from '../assets/nordic_api_gateway_logo.png';
import unityLogo from '../assets/unity_logo.png';
import trustpilotLogo from '../assets/trustpilo_logo.png';

const topSkills = ["Cloud Architecture", "DevOps", "Platform Engineering", "Site Reliability Engineering", "DevEx"];
const technologies = ["AWS", "Azure", "Kubernetes", "Pulumi", "Terraform", "Docker"];
const languages = ["TypeScript", "Go", "Python", "C#", "F#", "Node.js"];
---

<Layout title="Christian Probst | Senior DevOps & Platform Engineer">
	<main class="max-w-4xl mx-auto px-4 py-24">
		<header class="mb-16">
			<div class="flex flex-col md:flex-row justify-between items-start gap-8">
				<div class="flex items-center gap-6 flex-1">
					<div class="w-24 h-24 md:w-32 md:h-32 flex-shrink-0 rounded-full overflow-hidden border-2 border-accent opacity-0 animate-fade-in shadow-[0_0_15px_rgba(0,242,234,0.3)]">
						<Image
							src={headshot}
							alt="Christian Probst"
							width={256}
							height={256}
							class="w-full h-full object-cover"
						/>
					</div>
					<div>
						<h1 class="text-4xl md:text-6xl font-bold text-accent opacity-0 animate-reveal-up signature mb-2 leading-tight whitespace-nowrap">
							Christian Probst
						</h1>
						<p class="text-xl md:text-2xl text-white/80 opacity-0 animate-fade-in whitespace-nowrap">Senior DevOps Engineer @ Complexio</p>
						<div class="opacity-0 animate-fade-in mt-2 space-y-2">
							<p class="text-white/60">Platform Engineering & AI | Copenhagen, Denmark</p>
							<div class="flex flex-wrap gap-4 text-sm text-gray-400">
								<a href="mailto:christian.probst.dk@gmail.com" class="flex items-center gap-2 hover:text-accent transition-colors">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
									christian.probst.dk@gmail.com
								</a>
								<a href="https://github.com/sqdk" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 hover:text-accent transition-colors">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
									github.com/sqdk
								</a>
								<a href="https://www.linkedin.com/in/cprobstdk" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 hover:text-accent transition-colors">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
									linkedin.com/in/cprobstdk
								</a>
							</div>
						</div>
					</div>
				</div>
				<button
					onclick="window.print()"
					class="p-2 border border-accent text-accent hover:bg-accent hover:text-black transition-colors rounded-sm no-print opacity-0 animate-fade-in mt-2 flex items-center justify-center"
					aria-label="Print Resume"
				>
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<polyline points="6 9 6 2 18 2 18 9"></polyline>
						<path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
						<rect x="6" y="14" width="12" height="8"></rect>
					</svg>
				</button>
			</div>
			<div class="w-full h-px bg-white/20 mt-8 opacity-0 animate-fade-in"></div>
		</header>

		<div class="space-y-16 opacity-0 animate-fade-in">
			<section>
				<h2 class="text-2xl font-bold border-b border-gray-800 pb-2 mb-6 uppercase tracking-wider text-accent">Summary</h2>
				<p class="text-gray-300 leading-relaxed text-lg">
					Seasoned SRE/DevOps/Platform engineer with more than 10 years of experience, primarily in startups and scaleups. I have worked at several companies that IPO'ed, and enjoy navigating the unknown and solving hard problems. <br\> <br\>
					I feel at home acting as the connecting tissue between product and infrastructure ensuring product-related engineers can work in a joyful and effective way. I pride myself in my social skills and my ability to talk to any person regardless of function or department, allowing me to indepedently navigate an organisation and make sure my work solves real problems. I am able to balance pragmatism with idealism and understand that the world is never perfect, and a decision, never without compromise.
				</p>
			</section>

			<section>
				<h2 class="text-2xl font-bold border-b border-gray-800 pb-2 mb-8 uppercase tracking-wider text-accent">Experience</h2>
				<div class="space-y-12">
					<!-- Complexio -->
					<div class="hover:bg-white/5 p-4 -mx-4 rounded-lg transition-colors duration-300 group">
						<div class="flex items-start gap-4 mb-4">
							<div class="w-12 h-12 flex-shrink-0 bg-white p-1 rounded overflow-hidden">
								<Image src={complexioLogo} alt="Complexio Logo" class="w-full h-full object-contain" />
							</div>
							<div class="flex-1">
								<div class="flex justify-between items-baseline mb-1">
									<h3 class="text-2xl font-bold">Complexio</h3>
									<span class="text-gray-500">April 2024 — Present</span>
								</div>
							</div>
						</div>

						<div class="ml-16 space-y-6">
							<div>
								<p class="text-accent text-lg">Senior DevOps Engineer</p>
								<p class="text-gray-500 text-sm mb-3">Apr 2024 — Present</p>
								<ul class="list-disc list-outside ml-4 text-gray-400 space-y-2">
									<li>Lead for the infrastructure group managing on-premise deployments of a distributed AI application running on VMs and Kubernetes.</li>
									<li>First infrastructure hire (#9 employee); defined and matured processes around compliance, security, and internal IT on top of product-related infrastructure.</li>
									<li>Act as connective tissue between the commercial organisation and product, managing internal stakeholders and converting complex business requirements into actionable tasks.</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- Dixa -->
					<div class="hover:bg-white/5 p-4 -mx-4 rounded-lg transition-colors duration-300 group">
						<div class="flex items-start gap-4 mb-4">
							<div class="w-12 h-12 flex-shrink-0 bg-white p-1 rounded overflow-hidden">
								<Image src={dixaLogo} alt="Dixa Logo" class="w-full h-full object-contain" />
							</div>
							<div class="flex-1">
								<div class="flex justify-between items-baseline mb-1">
									<h3 class="text-2xl font-bold">Dixa</h3>
									<span class="text-gray-500">August 2020 — April 2024</span>
								</div>
							</div>
						</div>

						<div class="ml-16 space-y-6">
							<div>
								<p class="text-accent text-lg">Staff Engineer, Platform Engineering</p>
								<p class="text-gray-500 text-sm mb-3">Oct 2022 — Apr 2024</p>
								<ul class="list-disc list-outside ml-4 text-gray-400 space-y-2">
									<li>Setting the holistic, long term vision for the infrastructure platform aligning with organizational and business needs.</li>
									<li>Technical management and enablement, helping solve harder problems and facilitating technical 1:1s to support team motivation.</li>
									<li>Defining ways of working, facilitating architectural discussions, and defining PR/deployment processes.</li>
									<li>Facilitating mob/pair programming sessions to accelerate learning.</li>
								</ul>
							</div>
							<div>
								<p class="text-accent text-lg">Lead Platform Engineer</p>
								<p class="text-gray-500 text-sm mb-3">Apr 2021 — Oct 2022</p>
								<ul class="list-disc list-outside ml-4 text-gray-400 space-y-2">
									<li>Setting the holistic, long term vision for the infrastructure platform and ensuring it aligns with organisational and business needs.</li>
									<li>Technical management - I help solve the harder problems and strive towards enabling the team to make their own decisions and take ownership. Although I don't have direct reports, I still do technical 1:1s with everyone in the team to make sure they are working on things that are motivating and relevant to their needs and interests.</li>
									<li>Define ways of working within the team - From facilitating architectural discussions to defining PR and deployment processes and how we write our code.</li>
									<li>Facilitating mob/pair programming sessions - I believe shadowing/working together with someone is the best way to learn.</li>
									<li>Evangelising the tools we build to the rest of the organisation - I believe I have a knack for talking to people and understanding their needs, which also helps me talk to them in a language they understand.</li>
								</ul>
							</div>
							<div>
								<p class="text-accent text-lg">Senior Platform Engineer</p>
								<p class="text-gray-500 text-sm mb-3">Aug 2020 — Apr 2021</p>
								<ul class="list-disc list-outside ml-4 text-gray-400 space-y-2">
									<li>Led implementation of a new microservice platform on AWS (EKS) designed for 10-100x previous load.</li>
									<li>Redefined developer interaction with infrastructure through CLI tools, APIs, and web applications.</li>
									<li>Focused on self-service and "you build it, you own it" culture.</li>
									<li>Domain expertise: Kubernetes, AWS (IAM, EKS, R53, Networking), Pulumi (TypeScript), CI/CD.</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- Nordic API Gateway -->
					<div class="hover:bg-white/5 p-4 -mx-4 rounded-lg transition-colors duration-300 group">
						<div class="flex items-start gap-4 mb-4">
							<div class="w-12 h-12 flex-shrink-0 bg-white p-1 rounded overflow-hidden">
								<Image src={nordicLogo} alt="Nordic API Gateway Logo" class="w-full h-full object-contain" />
							</div>
							<div class="flex-1">
								<div class="flex justify-between items-baseline mb-1">
									<h3 class="text-2xl font-bold">Aiia (Formerly Nordic API Gateway)</h3>
									<span class="text-gray-500">May 2019 — August 2020</span>
								</div>
							</div>
						</div>

						<div class="ml-16 space-y-6">
							<div>
								<p class="text-accent text-lg">DevOps Tech Lead</p>
								<p class="text-gray-500 text-sm mb-3">May 2019 — Aug 2020</p>
								<ul class="list-disc list-outside ml-4 text-gray-400 space-y-2">
									<li>Lead for the DevOps team responsible for IaC automation and optimizing software development processes.</li>
									<li>Architected and implemented a microservice foundation in Azure.</li>
									<li>Introduced Terraform with a focus on developer usability.</li>
									<li>Built a scalable system for calculating microservice uptime archived in a custom data warehouse.</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- Unity -->
					<div class="hover:bg-white/5 p-4 -mx-4 rounded-lg transition-colors duration-300 group">
						<div class="flex items-start gap-4 mb-4">
							<div class="w-12 h-12 flex-shrink-0 bg-white p-1 rounded overflow-hidden">
								<Image src={unityLogo} alt="Unity Logo" class="w-full h-full object-contain" />
							</div>
							<div class="flex-1">
								<div class="flex justify-between items-baseline mb-1">
									<h3 class="text-2xl font-bold">Unity Technologies</h3>
									<span class="text-gray-500">Oct 2017 — Apr 2019</span>
								</div>
							</div>
						</div>

						<div class="ml-16 space-y-6">
							<div>
								<p class="text-accent text-lg">Software Developer</p>
								<p class="text-gray-500 text-sm mb-3">Oct 2017 — Apr 2019</p>
								<ul class="list-disc list-outside ml-4 text-gray-400 space-y-2">
									<li>Software development in F#, Python and JavaScript (Node.js).</li>
									<li>Development and maintenance of developer tooling and deployment automation.</li>
								</ul>
							</div>
						</div>
					</div>

					<!-- Trustpilot -->
					<div class="hover:bg-white/5 p-4 -mx-4 rounded-lg transition-colors duration-300 group">
						<div class="flex items-start gap-4 mb-4">
							<div class="w-12 h-12 flex-shrink-0 bg-white p-1 rounded overflow-hidden">
								<Image src={trustpilotLogo} alt="Trustpilot Logo" class="w-full h-full object-contain" />
							</div>
							<div class="flex-1">
								<div class="flex justify-between items-baseline mb-1">
									<h3 class="text-2xl font-bold">Trustpilot</h3>
									<span class="text-gray-500">Sep 2015 — Sep 2017</span>
								</div>
							</div>
						</div>

						<div class="ml-16 space-y-6">
							<div>
								<p class="text-accent text-lg">Full Stack Developer</p>
								<p class="text-gray-500 text-sm mb-3">Sep 2015 — Sep 2017</p>
								<ul class="list-disc list-outside ml-4 text-gray-400 space-y-2">
									<li>Managed infrastructure and software concerning integration, build, and deployment.</li>
									<li>Extensive use of AWS (EC2, Lambda, SQS, SNS, IAM, Kinesis, DynamoDB, ECS).</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</section>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<section>
					<h2 class="text-2xl font-bold border-b border-gray-800 pb-2 mb-6 uppercase tracking-wider text-accent">Skills</h2>
					<div class="space-y-6">
						<div>
							<h4 class="font-bold text-white mb-3">Top Skills</h4>
							<div class="flex flex-wrap gap-2">
								{topSkills.map((skill) => (
									<span class="px-3 py-1 border border-gray-700 rounded-full text-sm text-gray-300 hover:border-accent hover:text-accent transition-colors cursor-default">
										{skill}
									</span>
								))}
							</div>
						</div>
						<div>
							<h4 class="font-bold text-white mb-3">Technologies</h4>
							<div class="flex flex-wrap gap-2">
								{technologies.map((tech) => (
									<span class="px-3 py-1 border border-gray-700 rounded-full text-sm text-gray-300 hover:border-accent hover:text-accent transition-colors cursor-default">
										{tech}
									</span>
								))}
							</div>
						</div>
						<div>
							<h4 class="font-bold text-white mb-3">Languages</h4>
							<div class="flex flex-wrap gap-2">
								{languages.map((lang) => (
									<span class="px-3 py-1 border border-gray-700 rounded-full text-sm text-gray-300 hover:border-accent hover:text-accent transition-colors cursor-default">
										{lang}
									</span>
								))}
							</div>
						</div>
					</div>
				</section>

				<section>
					<h2 class="text-2xl font-bold border-b border-gray-800 pb-2 mb-6 uppercase tracking-wider text-accent">Languages</h2>
					<div class="space-y-2 text-gray-300">
						<p><span class="font-bold text-white">Danish:</span> Native or Bilingual</p>
						<p><span class="font-bold text-white">English:</span> Native or Bilingual</p>
					</div>
				</section>
			</div>

			<section>
				<h2 class="text-2xl font-bold border-b border-gray-800 pb-2 mb-6 uppercase tracking-wider text-accent">Education</h2>
				<div class="space-y-6">
					<div class="hover:bg-white/5 p-4 -mx-4 rounded-lg transition-colors duration-300">
						<div class="flex justify-between items-baseline mb-1">
							<h3 class="text-xl font-bold">Danmarks Tekniske Universitet</h3>
							<span class="text-gray-500">2010 — 2014</span>
						</div>
						<p class="text-gray-400">Bachelor of Applied Science - BASc, IT Engineering</p>
					</div>
					<div class="hover:bg-white/5 p-4 -mx-4 rounded-lg transition-colors duration-300">
						<div class="flex justify-between items-baseline mb-1">
							<h3 class="text-xl font-bold">CPHWest Ishøj</h3>
							<span class="text-gray-500">2006 — 2009</span>
						</div>
						<p class="text-gray-400">HTX, Math, physics and programming</p>
					</div>
				</div>
			</section>
		</div>

		<footer class="mt-24 pt-8 border-t border-gray-800 text-gray-500 text-sm flex justify-between items-center no-print">
			<p>&copy; 2025 Christian Probst</p>
		</footer>
	</main>
</Layout>

<style>
	.signature {
		display: inline-block;
	}

	@keyframes reveal-up {
		0% {
			opacity: 0;
			transform: translateY(20px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fade-in {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}

	.animate-reveal-up {
		animation: reveal-up 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
	}

	.animate-fade-in {
		animation: fade-in 1s ease-out forwards;
	}

	@media print {
		.no-print {
			display: none;
		}
		body {
			background-color: white !important;
			color: black !important;
		}
		.text-gray-300, .text-gray-400, .text-gray-500 {
			color: #374151 !important;
		}
		.text-accent {
			color: black !important;
			font-weight: bold;
		}
		.border-gray-800 {
			border-color: #e5e7eb !important;
		}
		.animate-reveal-up, .animate-fade-in {
			animation: none !important;
			opacity: 1 !important;
			transform: none !important;
		}
		.rounded-full {
			border-color: black !important;
			box-shadow: none !important;
		}
		main {
			padding-top: 0 !important;
			padding-bottom: 0 !important;
			max-width: none !important;
		}
		/* Ensure hover effects are off in print */
		.hover\:bg-white\/5 {
			background-color: transparent !important;
		}
		/* Print skill pills borders nicely */
		.border-gray-700 {
			border-color: #d1d5db !important;
		}
		/* Ensure links in header are visible/black */
		a {
			color: black !important;
			text-decoration: none !important;
		}
		/* Hide logos in print or keep them? User didn't say, but usually grayscale print is better.
		   I'll keep them but they might be color depending on printer. */
	}
</style>
